base	dc=ldap.local
uri	ldaps://ldap.local
binddn	cn=ldap,cn=Users,dc=ldap.local
bindpw	d50_*spg

scope sub
timelimit 120
bind_timelimit 5
bind_policy soft
idle_timelimit 3600

